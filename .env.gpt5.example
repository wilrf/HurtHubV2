# GPT-5 AI Configuration
OPENAI_API_KEY=sk-... # Your OpenAI API key with GPT-5 access
OPENAI_MODEL=gpt-5 # Options: gpt-5, gpt-5-pro
OPENAI_MAX_TOKENS=8000 # GPT-5 supports up to 12000
OPENAI_TEMPERATURE=0.7 # 0.0 (deterministic) to 1.0 (creative)
ENABLE_GPT5_STREAMING=true # Enable streaming responses
ENABLE_GPT5_MEMORY=true # Enable conversation memory
ENABLE_GPT5_REASONING=true # Enable extended reasoning for deep analysis

# Supabase Configuration (for conversation memory)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key # For server-side operations

# API Configuration
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=60000 # Increased for GPT-5 deep analysis

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_AI_INSIGHTS=true
VITE_ENABLE_DEEP_ANALYSIS=true
VITE_ENABLE_CONTEXT_MEMORY=true

# Rate Limiting
OPENAI_RATE_LIMIT_RPM=500 # Requests per minute
OPENAI_RATE_LIMIT_TPM=150000 # Tokens per minute

# Embedding Configuration (for semantic search)
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_EMBEDDING_DIMENSIONS=3072

# Environment
VITE_APP_ENV=development
VITE_APP_VERSION=2.0.0